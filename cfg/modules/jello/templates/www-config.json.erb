{
	"env": "<%= scope.lookupvar("::environment") %>",

    "bundleJs": <%= scope.lookupvar("curveball::params::bundleJs") %>,
    "cacheViews": <%= scope.lookupvar("curveball::params::cacheViews") %>,
    "debugTemplates": <%= scope.lookupvar("curveball::params::debugTemplates") %>,
    "listenPort": <%= scope.lookupvar("curveball::params::listenPort") %>,
    "staticBasePath": "<%= scope.lookupvar("curveball::params::staticBasePath") %>",
    "scheme": "<%= scope.lookupvar("curveball::params::scheme") %>",
    "useCluster": <%= scope.lookupvar("curveball::params::useCluster") %>,
    "useObjectCache": <%= scope.lookupvar("curveball::params::useObjectCache") %>,
    "workers": <%= scope.lookupvar("curveball::params::workers") %>,

	"affiliate": <%= scope.function_sorted_json([ scope.lookupvar("curveball::params::affiliates") ]) %>,

	"airbrake": {
		"apiKey": "<%= scope.lookupvar("curveball::params::airbrake_apiKey") %>",
		"environment": "<%= scope.lookupvar("curveball::params::airbrake_environment") %>"
	},

    "cache": {
		"host": "<%= scope.lookupvar("curveball::params::cache_host") %>",
		"port": <%= scope.lookupvar("curveball::params::cache_port") %>
	},

	"cloudStorage": {
		"containerName": "<%= scope.lookupvar("curveball::params::cloudStorage_containerName") %>",
		"username": "<%= scope.lookupvar("curveball::params::cloudStorage_username") %>",
		"apiKey": "<%= scope.lookupvar("curveball::params::cloudStorage_apiKey") %>",
		"useInternal": <%= scope.lookupvar("curveball::params::cloudStorage_useInternal") %>,
		"region": "<%= scope.lookupvar("curveball::params::cloudStorage_region") %>"
	},

	"db": {
		"host": "<%= scope.lookupvar("curveball::params::db_host") %>",
		"port": <%= scope.lookupvar("curveball::params::db_port") %>,
		"user": "<%= scope.lookupvar("curveball::params::db_user") %>",
		"password": "<%= scope.lookupvar("curveball::params::db_password") %>",
		"database": "<%= scope.lookupvar("curveball::params::db_database") %>"
	},

	"log": {
		"level": "<%= scope.lookupvar("curveball::params::log_level") %>",
		"showPid": <%= scope.lookupvar("curveball::params::log_showPid") %>,
		"timestamps": "<%= scope.lookupvar("curveball::params::log_timestamps") %>",
		"transports": [ "<%= scope.lookupvar("curveball::params::log_transports").join '", "' %>" ],
		"id": "curveball"
	},

	"mail": {
		"pickupTransport": {
			"directory": "<%= mail_pickup_directory %>"
		}
	},

	"mixpanel": {
		"overrideToken": "<%= scope.lookupvar("curveball::params::mixpanel_overrideToken") %>"
	},

	"memcached": {
		"host": "<%= scope.lookupvar("curveball::params::memcached_host") %>",
		"port": <%= scope.lookupvar("curveball::params::memcached_port") %>
	},

	"session": {
		"secret": "<%= scope.lookupvar("curveball::params::session_secret") %>",
		"ttl": <%= scope.lookupvar("curveball::params::session_ttl") %>,
		"key": "sid"
	},

	"store": {
		"host": "<%= scope.lookupvar("curveball::params::store_host") %>",
		"port": <%= scope.lookupvar("curveball::params::store_port") %>
	}
}